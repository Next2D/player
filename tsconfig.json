{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "target": "es6",
    "module": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@next2d/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "src/index.ts",
    "@types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "worker",
    "scripts",
    "__tests__",
    "dist"
  ]
}