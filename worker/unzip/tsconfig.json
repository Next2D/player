{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./"
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}