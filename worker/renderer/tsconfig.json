{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@next2d/share": [
        "../../packages/share/src"
      ],
      "@next2d/webgl": [
        "../../packages/webgl/src"
      ],
      "@next2d/geom": [
        "../../packages/geom/src"
      ],
      "@next2d/filters": [
        "../../packages/filters/src"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../@types/**/*.ts"
  ],
  "exclude": [
    "../../src",
    "node_modules",
    "dist"
  ]
}