{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "target": "esnext",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist/"
  },
  "include": [
    "**/*.ts",
    "webgl/**/*.ts",
    "../@types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}