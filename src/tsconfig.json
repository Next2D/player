{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022", "DOM", "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "outDir": "./dist/",
    "paths": {
      "@next2d/*": [
        "../packages/*/src"
      ]
    }
  },
  "include": [
    "index.ts",
    "../@types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}